<?xml version='1.0' encoding='utf-8'?>
<widget id="love.italy" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Love Italy</name>
    <description>Applicazione mobile del Mercato Agricolo LoveItaly
	</description>
    <author email="ramcrodd@gmail.com" href="http://www.loveitaly.net/">Ram Crodd</author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon src="www/res/logo.png" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="android" spec="5.1.1" />
    <plugin name="cordova-plugin-statusbar" spec="~2.1.3" />
    <preference name="StatusBarBackgroundColor" value="#388e3c" />
    <plugin name="cordova-plugin-network-information" spec="~1.3.1" />
</widget>
